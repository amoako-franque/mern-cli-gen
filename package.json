{
  "name": "mern-cli-gen",
  "version": "1.0.0",
  "description": "CLI tool to scaffold production-ready MERN stack projects",
  "main": "dist/index.js",
  "bin": {
    "mern-cli-gen": "dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.js",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "templates"
  ],
  "keywords": [
    "mern",
    "cli",
    "generator",
    "react",
    "express",
    "mongodb",
    "nodejs",
    "scaffold",
    "boilerplate",
    "typescript"
  ],
  "author": "amoako-franque",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.2.0",
    "ora": "^8.1.1",
    "validate-npm-package-name": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.4.2",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
