<% if (database==='mongodb' ) { %>
    const mongoose = require('mongoose');
    const { config } = require('./index');

    const connectDB = async () => {
    try {
    await mongoose.connect(config.mongoUri);
    console.log('üì¶ Connected to MongoDB (Mongoose)');
    } catch (error) {
    console.error('‚ùå MongoDB connection error:', error);
    process.exit(1);
    }
    };
    module.exports = { connectDB };
    <% } else if (database==='postgresql' ) { %>
        <% if (orm==='prisma' ) { %>
            const { PrismaClient } = require('@prisma/client');
            const prisma = new PrismaClient();

            const connectDB = async () => {
            try {
            await prisma.$connect();
            console.log('üì¶ Connected to PostgreSQL (Prisma)');
            } catch (error) {
            console.error('‚ùå Prisma connection error:', error);
            process.exit(1);
            }
            };
            module.exports = { connectDB, prisma };
            <% } else { %>
                const pg = require('pg');
                const { config } = require('./index');
                const { Pool } = pg;

                const pool = new Pool({
                connectionString: config.databaseUrl,
                });

                const connectDB = async () => {
                try {
                await pool.connect();
                console.log('üì¶ Connected to PostgreSQL (pg)');
                } catch (error) {
                console.error('‚ùå PostgreSQL connection error:', error);
                process.exit(1);
                }
                };
                module.exports = { connectDB, pool };
                <% } %>
                    <% } else { %>
                        module.exports = { connectDB: async () => { console.log('No database configured'); } };
                        <% } %>