PORT=5000
NODE_ENV=development

<%_ if (database === "mongodb") { _%>
MONGODB_URI=mongodb://localhost:27017/<%= projectName %>
<%_ } else if (database === "postgresql") { _%>
DATABASE_URL=postgresql://user:password@localhost:5432/<%= projectName %>?schema=public
<%_ } _%>

<%_ if (auth === "jwt" || auth === "passport") { _%>
JWT_SECRET=your_jwt_secret_key_change_in_production
<%_ } _%>

<%_ if (auth === "session" || auth === "passport") { _%>
SESSION_SECRET=your_session_secret_key_change_in_production
<%_ } _%>

<%_ if (auth === "passport") { _%>
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
<%_ } _%>

<%_ if (payment === "stripe") { _%>
# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
<%_ } else if (payment === "paystack") { _%>
# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret-key
<%_ } _%>

CLIENT_URL=http://localhost:5173
