PORT=5000
NODE_ENV=development

<% if (database==='mongodb' ) { %>
    MONGODB_URI=mongodb://localhost:27017/<%= projectName %>
        <% } else if (database==='postgresql' ) { %>
            DATABASE_URL=postgresql://user:password@localhost:5432/<%= projectName %>?schema=public
                <% } %>

                    <% if (auth==='jwt' || auth==='passport' ) { %>
                        JWT_SECRET=your_jwt_secret_key_change_in_production
                        <% } %>

                            <% if (auth==='session' || auth==='passport' ) { %>
                                SESSION_SECRET=your_session_secret_key_change_in_production
                                <% } %>

                                    <% if (auth==='passport' ) { %>
                                        # Google OAuth
                                        GOOGLE_CLIENT_ID=your-google-client-id
                                        GOOGLE_CLIENT_SECRET=your-google-client-secret

                                        # GitHub OAuth
                                        GITHUB_CLIENT_ID=your-github-client-id
                                        GITHUB_CLIENT_SECRET=your-github-client-secret
                                        <% } %>

                                            <% if (payment==='stripe' ) { %>
                                                # Stripe
                                                STRIPE_SECRET_KEY=your-stripe-secret-key
                                                STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
                                                <% } else if (payment==='paystack' ) { %>
                                                    # Paystack
                                                    PAYSTACK_SECRET_KEY=your-paystack-secret-key
                                                    <% } %>

                                                        CLIENT_URL=http://localhost:5173