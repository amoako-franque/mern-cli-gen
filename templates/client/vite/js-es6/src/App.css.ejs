.app {
text-align: center;
min-height: 100vh;
display: flex;
flex-direction: column;
}

.app-header {
background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
padding: 2rem;
color: white;
}

.app-header h1 {
margin: 0 0 0.5rem 0;
font-size: 2.5rem;
}

.app-header p {
margin: 0;
opacity: 0.9;
}

.app-header nav {
margin-top: 1rem;
}

.app-header nav a {
color: white;
text-decoration: none;
margin: 0 1rem;
font-weight: bold;
}

.app-header nav a:hover {
text-decoration: underline;
}

main {
flex: 1;
display: flex;
align-items: center;
justify-content: center;
padding: 2rem;
}

.page {
background: white;
padding: 2rem;
border-radius: 8px;
box-shadow: 0 4px 6px rgba(0,0,0,0.1);
max-width: 600px;
width: 100%;
}

code {
background: #f4f4f4;
padding: 0.2rem 0.5rem;
border-radius: 4px;
font-family: monospace;
}